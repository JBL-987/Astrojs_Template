---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout title="Blockchain4Indonesia">
  <div id="vanta-background"></div>
  <div id="container"> 
      <Navigation />
    <main>
      <section id="home" class="home-section">
        <div class="home-content">
          <h1>Welcome to Blockchain4Indonesia</h1>
          <p class="home-description">
           we are a team of blockchain enthusiasts who are passionate about the 
           potential of blockchain technology to revolutionize the way we do business.
          </p>
        </div>
      </section>
  </div>
    <Footer />
</Layout>

<style>
  :root {
    --primary-color: #ff0000;
    --background: #000000;
    --transition: 0.3s ease;
  }

  #container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 1;
  }

  #vanta-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  main {
    flex: 1;
    padding: 2rem max(5vw, 1rem);
  }

  .home-section {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  .home-content {
    max-width: 800px;
    width: 100%;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border-radius: 1.5rem;
    padding: 3rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .home-description {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    line-height: 1.6;
    margin: 1.5rem 0;
  }

  .content-sections {
  display: grid;
  gap: 2.5rem;
  padding: 4rem 0;
  max-width: 1200px;
  margin: 0 auto;
}

.content-sections h1 {
  grid-column: 1 / -1;
  text-align: flex;
  margin-bottom: 2rem;
  font-size: clamp(1.5rem, 3vw, 2.5rem);
}

.content-section {
  display: flex;
  flex-direction: column;
  text-decoration: none; /* Remove default link underline */
  color: inherit; /* Inherit text color */
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  padding: 2.5rem;
  transition: all var(--transition);
  border: 1px solid rgba(255, 255, 255, 0.1);
  cursor: pointer;
  text-align: left;
  min-height: 200px;
  outline: none; 
}

.content-section:focus-visible {
  outline: 2px solid var(--primary-color);
  outline-offset: 2px;
}

.content-section h2 {
  font-size: clamp(1.25rem, 2vw, 1.75rem);
  margin-bottom: 1rem;
  color: var(--primary-color);
}

.content-section .section-content {
  font-size: 1rem;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.8);
}

.content-section:hover,
.content-section:focus {
  transform: translateY(-5px);
  background: rgba(255, 255, 255, 0.1);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  border-color: var(--primary-color);
}

  @media (min-width: 768px) {
  .content-sections {
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  }
}

@media (max-width: 767px) {
  .content-sections {
    gap: 1.5rem;
    padding: 2rem 0;
  }
  
  .content-section {
    padding: 1.5rem;
    min-height: 150px;
  }
}

  @media (min-width: 768px) {
    .content-sections {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
  }

  @media (max-width: 767px) {
    .home-section {
      min-height: 60vh;
    }
  }
</style>

<script>
 document.addEventListener('DOMContentLoaded', () => {
    VANTA.NET({
      el: "#vanta-background",
      THREE,  // Pass THREE directly
      mouseControls: true,
      touchControls: true,
      gyroControls: false,
      minHeight: 200.00,
      minWidth: 200.00,
      scale: 1.00,
      scaleMobile: 1.00,
      color: 0xff0000,
      backgroundColor: 0x000000,
      points: 8,
      maxDistance: 25.00,
      spacing: 15.00
    });
  });
</script>