---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout title="Blockchain4Indonesia">
  <div id="vanta-background"></div>
  <div id="container"> 
    <Navigation />   
    <main>
      <section id="pricing" class="pricing-section">
        <div class="pricing-content">
          <h1>Choose your best plan</h1>
          <p class="pricing-description">
            Choose the best plan that suits your needs. We offer a variety of plans to help you get started with Blockchain4Indonesia.
          </p>
          
          <!-- Billing Toggle -->
          <div class="billing-toggle">
            <span>Monthly</span>
            <label class="switch">
              <input type="checkbox" id="billing-toggle">
              <span class="slider round"></span>
            </label>
            <span>Yearly</span>
            <span class="save-badge">Save 20%</span>
          </div>

          <div class="content-sections">
             <div class="content-section">
              <h2>Free</h2>
              <div class="price-container">
                <span class="monthly-price">$0</span>
                <span class="yearly-price hidden">$0</span>
                <span class="price-period">/month</span>
              </div>
              <div class="section-content">
                <ul>
                  <li>Seamless integration</li>
                  <li>Real-time data visualization</li>
                  <li>Advanced predictive analytics</li>
                  <li>Collaborative environment</li>
                  <li>Responsive customer support</li>
                </ul>
              </div>
              <button class="primary-button">Get Started</button>
            </div>

            <div class="content-section">
              <h2>Beginner</h2>
              <div class="price-container">
                <span class="monthly-price">$0</span>
                <span class="yearly-price hidden">$0</span>
                <span class="price-period">/month</span>
              </div>
              <div class="section-content">
                <ul>
                  <li>Seamless integration</li>
                  <li>Real-time data visualization</li>
                  <li>Advanced predictive analytics</li>
                  <li>Collaborative environment</li>
                  <li>Responsive customer support</li>
                </ul>
              </div>
              <button class="primary-button">Get Started</button>
            </div>

            <div class="content-section">
              <h2>Standard</h2>
              <div class="price-container">
                <span class="monthly-price">$29</span>
                <span class="yearly-price hidden">$290</span>
                <span class="price-period">/month</span>
              </div>
              <div class="section-content">
                <ul>
                  <li>Everything in Beginner, plus:</li>
                  <li>Premium analytics tools</li>
                  <li>Priority customer support</li>
                  <li>Advanced collaboration features</li>
                  <li>Custom integrations</li>
                </ul>
              </div>
              <button class="primary-button">Get Started</button>
            </div>
            <div class="content-section">
              <h2>Premium</h2>
              <div class="price-container">
                <span class="monthly-price">$36</span>
                <span class="yearly-price hidden">$360</span>
                <span class="price-period">/month</span>
              </div>
              <div class="section-content">
                <ul>
                  <li>Seamless integration</li>
                  <li>Real-time data visualization</li>
                  <li>Advanced predictive analytics</li>
                  <li>Collaborative environment</li>
                  <li>Responsive customer support</li>
                </ul>
              </div>
              <button class="primary-button">Get Started</button>
            </div>
        </div>
      </section>
    </main>
  </div>
  <Footer />
</Layout>

<style>
  /* Keep all your existing styles */
  :root {
    --primary-color: #ff0000;
    --background: #000000;
    --transition: 0.3s ease;
  }

  #container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 1;
  }

  #vanta-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  main {
    flex: 1;
    padding: 2rem max(5vw, 1rem);
  }

  .pricing-section {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  .pricing-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .pricing-description {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    line-height: 1.6;
    margin: 1.5rem 0;
  }

  /* New styles for billing toggle */
  .billing-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
  }

  .switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(255, 255, 255, 0.1);
    transition: .4s;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: var(--primary-color);
    transition: .4s;
  }

  .switch input:checked + .slider {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .switch input:checked + .slider:before {
    transform: translateX(26px);
  }

  .slider.round {
    border-radius: 34px;
  }

  .slider.round:before {
    border-radius: 50%;
  }

  .save-badge {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    color: var(--primary-color);
    display: none;
  }

  /* Price container styles */
  .price-container {
    margin: 1rem 0;
    font-size: 2rem;
    font-weight: bold;
    color: var(--primary-color);
  }

  .price-period {
    font-size: 1rem;
    opacity: 0.8;
  }

  .hidden {
    display: none;
  }

  /* Updated content section styles */
  .content-sections {
    display: grid;
    gap: 2.5rem;
    padding: 4rem 0;
    max-width: 1200px;
    margin: 0 auto;
  }

  .content-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border-radius: 1rem;
    padding: 2.5rem;
    transition: all var(--transition);
    border: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  .section-content ul {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
  }

  .section-content li {
    margin: 1rem 0;
    color: rgba(255, 255, 255, 0.8);
  }

  .primary-button {
    margin-top: auto;
    width: 100%;
    max-width: 200px;
  }

  @media (min-width: 768px) {
    .content-sections {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Keep your existing media queries */
</style>

<script>
  // Your existing Vanta.js initialization
  document.addEventListener('DOMContentLoaded', () => {
    VANTA.NET({
      el: "#vanta-background",
      THREE,
      mouseControls: true,
      touchControls: true,
      gyroControls: false,
      minHeight: 200.00,
      minWidth: 200.00,
      scale: 1.00,
      scaleMobile: 1.00,
      color: 0xff0000,
      backgroundColor: 0x000000,
      points: 8,
      maxDistance: 25.00,
      spacing: 15.00
    });

    // New billing toggle functionality
    const billingToggle = document.getElementById('billing-toggle');
    const monthlyPrices = document.querySelectorAll('.monthly-price');
    const yearlyPrices = document.querySelectorAll('.yearly-price');
    const pricePeriods = document.querySelectorAll('.price-period');
    const saveBadge = document.querySelector('.save-badge');

    billingToggle?.addEventListener('change', (e) => {
      const isYearly = e.target.checked;
      
      monthlyPrices.forEach(price => price.classList.toggle('hidden'));
      yearlyPrices.forEach(price => price.classList.toggle('hidden'));
      
      pricePeriods.forEach(period => {
        period.textContent = isYearly ? '/year' : '/month';
      });
      
      saveBadge.style.display = isYearly ? 'inline-block' : 'none';
    });
  });
</script>